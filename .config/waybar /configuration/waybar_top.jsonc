{
    "layer": "top",
    "position": "top",
    "height": 20,
    "margin": "0px",
    "name": "waybar1",

    "modules-left": 
    [
    "image#arch",
    "custom/weather",
    "image#album-art",
    "custom/media"
    ],

    "modules-center":
    [
    "pulseaudio",
    "hyprland/window",
    "custom/notification"
    ],

    "modules-right":
    [
    "custom/nvidia",
    "cpu",
    "temperature",
    "memory",
    "disk"
    ],

    "image#arch": {
    "path": "/home/jakob/media/pictures/waybar/arch.png",
    "size": 18,
    "interval": 1,
    "on-click": "kitty --hold -e fastfetch",
    },

    "custom/weather": {
    "exec": "${HOME}/.config/waybar/Scripts/weather-module.sh Berlin+Germany",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 1,
    "on-click": ""
    },

    "image#album-art": {
    "exec":"/home/jakob/.config/waybar/Scripts/cover_image.sh",
    "size": 20,
    "interval": 1
    },

    "custom/media": {
    "format": "{icon}{text}Û∞ìá",
    "escape": true,
    "return-type": "json",
    "max-length": 20,
    "on-click": "playerctl play-pause playerctl next", 
    "on-click-right": "playerctl stop",
    "smooth-scrolling-threshold":1, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "exec": "/home/jakob/.config/waybar/Scripts/mediaplayer.py 2> /dev/null",
    "tooltip": true,
    "tooltip-format": "{text}"
    },


    "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}Ôäî",
    "format-muted": "ÔÄ¶",
    "format-icons": {
        "alsa_output.pci-0000_00_1f.3.analog-stereo": "Óå≠",
        "alsa_output.pci-0000_00_1f.3.analog-stereo-muted": "Óª®Óå≠",
        "hands-free": "Ôñê",
        "phone": "ÔÇï",
        "phone-muted": "Ó¥ó",
        "portable": "ÔÇï",
        "default": ["ÔÄ•", "ÔÄ•"]
    },
    "scroll-step": 1,
    "on-click": "pavucontrol",
    "ignored-sinks": ["Easy Effects Sink"]
    },

    "hyprland/window": {
    "format": "Ôãê {}",
    "rewrite": {
        "(.*) ‚Äî Mozilla Firefox": "üåé $1",
        "(.*) - fish": "> [$1]"
    },
    "separate-outputs": true,
    "on-click": ""
    },

    "custom/notification": {
    "tooltip": true,
    "format": "<span size='10pt'>{icon}</span>",
    "format-icons": {
    "notification": "Û±Ö´",
    "none": "Û∞Çú",
    "dnd-notification": "Û∞Ç†",
    "dnd-none": "Û∞™ì",
    "inhibited-notification": "Û∞Çõ",
    "inhibited-none": "Û∞™ë",
    "dnd-inhibited-notification": "Û∞Çõ",
    "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
    },


    "custom/nvidia": {
    "exec": "nvidia-smi --query-gpu=utilization.gpu,temperature.gpu --format=csv,nounits,noheader | sed 's/\\([0-9]\\+\\), \\([0-9]\\+\\)/\\1% Û∞°Å\\2/g'",
    "format": "{} Óº™",
    "interval": 1,
    "on-click": ""
    },

    "cpu": {
    "interval": 1,
    "format": "{}% Ôãõ",
    "max-length": 10,
    "on-click": ""
    },

    "temperature": {
    "format": "{temperatureC}¬∞C Ôãâ",
    "on-click": ""
    },

    "memory": {
    "interval": 2,
    "format": "<span>{used:0.1f}G/{total:0.1f}G ÓøÖ</span>",
    "on-click": ""
    },

    "disk": {
	"interval": 30,
	"format": "{specific_free:0.2f}GB | {specific_total:0.2f}GB Û±õü",
	"unit": "GB",
    "on-click": ""
    }
}
