{   
    "height": 20,
    "layer": "top",
    "modules-left":
    ["clock",
     "custom/weather",
     "custom/media"
    ],
    "modules-center": 
    ["custom/nvidia",
     "hyprland/workspaces",
     "memory"
    ],
    "modules-right": 
    ["temperature",
     "cpu",
     "pulseaudio",
     "network",
     "custom/notification"
    ],

    "clock": {
    "interval": 60,
    "tooltip": true,
    "format": "{:%H:%M | %d.%m}",
    "tooltip-format": "{:%Y-%m-%d}",
    },
    
    "custom/weather": {
    "exec": "~/.config/waybar/Scripts/weather-module.sh Berlin+Germany",
    "return-type": "json",
    "format": "{}",
    "tooltip": true,
    "interval": 600
    },

    "custom/media": {
    "format": "{icon} {text}",
    "escape": true,
    "return-type": "json",
    "max-length": 20,
    "on-click": "playerctl play-pause playerctl next", 
    "on-click-right": "playerctl stop",
    "smooth-scrolling-threshold":1, // This value was tested using a trackpad, it should be lowered if using a mouse.
    "on-scroll-up": "playerctl next",
    "on-scroll-down": "playerctl previous",
    "exec": "~/.config/waybar/Scripts/mediaplayer.py 2> /dev/null",
    "tooltip": true,
    "tooltip-format": "{text}"
    },

    "memory": {
    "interval": 2,
    "format": "{used:0.1f}G/{total:0.1f}G ïƒ‰"
    },

    "hyprland/workspaces": {
    "persistent-workspaces": {
             "*": 8,
       }
    },

